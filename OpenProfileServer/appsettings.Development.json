{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "ZiggyCreatures.Caching.Fusion": "Warning"
    }
  },
  "DatabaseSettings": {
    "Type": "SQLite",
    "ConnectionString": "Data Source=development.db"
  },
  "Cache": {
    "IsEnabled": true,
    "UseRedis": false
  },
  "Security": {
    "RootUser": "admin",
    "RootPassword": "Password123!",
    "ApplicationSecret": "DEV_SECRET_KEY_UNSAFE"
  },
  "Jwt": {
    "Issuer": "OpenProfileServer.Dev",
    "Audience": "OpenProfileServer.Local"
  },
  "Email": {
    "IsEnabled": false,
    "Host": "localhost",
    "Port": 1025,
    "FromAddress": "dev@localhost"
  },
  "Storage": {
    "MaxUploadSizeBytes": 20971520
  },
  "Compression": {
    "Enabled": false,
    "EnableForHttps": false,
    "Level": "Fastest"
  },
  "RateLimiting": {
    "Policies": [
      {
        "Name": "general",
        "Type": "FixedWindow",
        "PermitLimit": 1000,
        "PeriodSeconds": 60
      }
    ]
  }
}
