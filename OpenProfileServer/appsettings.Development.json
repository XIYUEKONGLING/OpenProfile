{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "ZiggyCreatures.Caching.Fusion": "Warning"
    }
  },
  "DatabaseSettings": {
    "Type": "SQLite",
    "ConnectionString": "Data Source=openprofile_dev.db"
  },
  "Cache": {
    "IsEnabled": true,
    "UseRedis": false,
    "RedisConnection": "",
    "InstancePrefix": "Dev:"
  },
  "Security": {
    "RootUser": "admin",
    "RootPassword": "Password123!",
    "ApplicationSecret": "DEVELOPMENT_ONLY_INSECURE_SECRET_KEY_FOR_LOCAL_SIGNING"
  },
  "Jwt": {
    "Issuer": "OpenProfileServer.Development",
    "Audience": "OpenProfileServer.Localhost"
  },
  "RateLimiting": {
    "Policies": [
      {
        "Name": "general",
        "Type": "FixedWindow",
        "PermitLimit": 1000,
        "PeriodSeconds": 60,
        "QueueLimit": 100
      }
    ]
  }
}
