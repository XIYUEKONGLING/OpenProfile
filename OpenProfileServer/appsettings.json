{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ZiggyCreatures.Caching.Fusion": "Error"
    }
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "Type": "PgSQL",
    "ConnectionString": "Host=localhost;Database=openprofile;Username=postgres;Password=secure_password"
  },
  "Cache": {
    "IsEnabled": true,
    "UseRedis": true,
    "RedisConnection": "localhost:6379",
    "InstancePrefix": "OpenProfileServer:",
    "DefaultExpirationMinutes": 30,
    "SizeLimit": 2048,
    "EnableFailSafe": true
  },
  "Security": {
    "RootUser": "root",
    "RootPassword": "VERY_SECURE_PASSWORD_123!",
    "ApplicationSecret": "REPLACE_WITH_A_SECURE_RANDOM_STRING_OF_AT_LEAST_32_CHARACTERS"
  },
  "Jwt": {
    "Issuer": "OpenProfileServer.Production",
    "Audience": "OpenProfileServer.Clients",
    "AccessTokenExpirationMinutes": 10,
    "RefreshTokenExpirationDays": 7,
    "RequireHttpsMetadata": true
  },
  "Email": {
    "IsEnabled": true,
    "Host": "smtp.example.com",
    "Port": 587,
    "Username": "apikey",
    "Password": "smtp_password",
    "UseSsl": false,
    "UseStartTls": true,
    "FromAddress": "noreply@example.com",
    "FromName": "OpenProfile"
  },
  "Storage": {
    "MaxUploadSizeBytes": 5242880,
    "AllowedMimeTypes": [
      "image/jpeg",
      "image/png",
      "image/webp",
      "image/gif",
      "image/svg+xml"
    ]
  },
  "Compression": {
    "Enabled": true,
    "EnableForHttps": true,
    "Level": "Optimal"
  },
  "RateLimiting": {
    "Policies": [
      {
        "Name": "general",
        "Type": "SlidingWindow",
        "PermitLimit": 100,
        "PeriodSeconds": 60,
        "QueueLimit": 10
      }
    ]
  }
}
